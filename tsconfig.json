{
  "include": ["**/*.ts"],
  "exclude": ["**/node_modules/*"],
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2016",
    "lib": ["ES2016", "DOM"],

    /* Modules */
    "module": "ESNext",
    "moduleResolution": "Bundler",

    /* Emit */
    "importHelpers": true,

    /* Interop Constraints */
    "isolatedModules": true,
    "esModuleInterop": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  }
}
